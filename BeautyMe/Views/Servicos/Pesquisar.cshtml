@model List<BeautyMe.Models.Servico>
@{
    ViewBag.Title = "Pesquisar";
}

<h2>Pesquisar</h2>

@using (Html.BeginForm())
{
    @Html.TextBox("pesquisa")
    <button type="submit">Pesquisar por serviço</button>
}
<hr />
@if (Model.Count() > 0)
{
    <div class="list-group">
        @foreach (var item in Model)
        {
            <div class="list-group-item active" onclick="profId.value = '@item.Profissional_Id',$('#ListarServicos')[0].submit()">
                <h3>@item.Name - @item.Profissional.Name</h3>
                <p>R$@item.Preco </p>
                <p>@item.Tempo</p>
            </div>
        }
    </div>
}

@using (Html.BeginForm("ListarServicos", "Profissionals", FormMethod.Get, new { id = "ListarServicos" }))
{
    <input type="hidden" id="profId" name="profId" />
}