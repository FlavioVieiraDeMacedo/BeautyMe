<div style="margin-top:60px">
    <link href="~/Content/cssDoGiovani.css" rel="stylesheet" />
    @model List<BeautyMe.Models.Servico>
    @{
        ViewBag.Title = "Pesquisar";
    }


    @using (Html.BeginForm("ListarServicos", "Profissionals", FormMethod.Get, new { id = "ListarServicos" }))
    {
        <input type="hidden" id="profId" name="profId" />
    }
    @using (Html.BeginForm("VerAgendaProfissional", "Agenda", FormMethod.Get, new { id = "verAgenda" }))
    {
        <input type="hidden" id="profId1" name="profId1" />
    }
    <form>
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Pesquisar por serviço" id="pesquisa" name="pesquisa">
            <div class="input-group-btn">
                <button class="btn btn-default" type="submit">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </div>
        </div>
    </form>
    <hr />


    @if (Model.Count() > 0)
    {
        <div class="product-list">
            @foreach (var item in Model)
            {
                <div class="product">
                    <div class="product--imagebox">
                        <img class="service--image" src="https://via.placeholder.com/70x70" alt="">

                        <div class="product--stars">
                            <img src="https://i.imgur.com/gCmogS4.png" alt="">
                            <span>4,9</span>
                        </div>
                    </div>
                    <div class="product--info">
                        <a href="#" onclick="profId1.value = '@item.Profissional_Id',$('#verAgenda')[0].submit()"><p class="product--info__title">@item.Name</p></a>
                        <p class="product--info__item">R$ @Html.DisplayFor(modelItem => item.Preco)</p>
                        <p class="product--info__item">@Html.DisplayFor(modelItem => item.Tempo)</p>
                        <a href="#" onclick="profId.value = '@item.Profissional_Id',$('#ListarServicos')[0].submit()"><p class="product--info__item">Profissional: @item.Profissional.Name</p></a>
                    </div>
                </div>
            }
        </div>
    }

</div>