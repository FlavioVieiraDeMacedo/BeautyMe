@model List<BeautyMe.Models.Servico>
@{
    ViewBag.Title = "Pesquisar";
}

<h2>Encontre o tratamento ideal para você</h2>


@using (Html.BeginForm("ListarServicos", "Profissionals", FormMethod.Get, new { id = "ListarServicos" }))
{
    <input type="hidden" id="profId" name="profId" />
}
@using (Html.BeginForm("VerAgendaProfissional", "Agenda", FormMethod.Get, new { id = "verAgenda" }))
{
    <input type="hidden" id="profId1" name="profId1" />
}
<form>
    <div class="input-group">
        <input type="text" class="form-control" placeholder="Pesquisar por serviço" id="pesquisa" name="pesquisa">
        <div class="input-group-btn">
            <button class="btn btn-default" type="submit">
                <i class="glyphicon glyphicon-search"></i>
            </button>
        </div>
    </div>
</form>
<hr />


@if (Model.Count() > 0)
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 text-center col-sm-6 col-xs-12" >
                <div class="thumbnail product-box">
                    <div class="caption">
                        <a href="#" onclick="profId1.value = '@item.Profissional_Id',$('#verAgenda')[0].submit()"><h3 >@item.Name</h3></a>
                        <p>Preço :<strong>R$ @Html.DisplayFor(modelItem => item.Preco)</strong></p>
                        <p>Tempo estimado :@Html.DisplayFor(modelItem => item.Tempo)</p>
                        <a href="#" onclick="profId.value = '@item.Profissional_Id',$('#ListarServicos')[0].submit()"><p>Profissional: @item.Profissional.Name</p></a>
                    </div>
                </div>
            </div>
        }
    </div>
}