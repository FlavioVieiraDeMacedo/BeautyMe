<link href="~/Content/cssDoGiovani.css" rel="stylesheet" />
@model BeautyMe.Models.Servico

@{
    ViewBag.Title = "Create";
}
    <header class="products-header" style="margin-top:50px">
        <a href="@Url.Action("Index")"  class="products-header--icon">
            <img src="https://i.imgur.com/VeJSOlR.png" alt="">
        </a>
        <p class="products-header--title">Adicionar Serviço</p>
    </header>

<div style="margin-top:30px">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.AntiForgeryToken()

        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "login-form--input", placeholder = "Nome" } })
        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })

        @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "login-form--input", placeholder = "Descrição" } })
        @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })

        @Html.EditorFor(model => model.Preco, new { htmlAttributes = new { @class = "login-form--input", placeholder = "Preço" } })
        @Html.ValidationMessageFor(model => model.Preco, "", new { @class = "text-danger" })

        @Html.EditorFor(model => model.Tempo, new { htmlAttributes = new { @class = "login-form--input", placeholder = "Tempo estimado" } })
        @Html.ValidationMessageFor(model => model.Tempo, "", new { @class = "text-danger" })

        <button class="login-form--button" type="submit">Salvar</button>
    }

    
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<style>
    .body-content {
        padding-left: 0px;
        padding-right: 0px;
    }
</style>