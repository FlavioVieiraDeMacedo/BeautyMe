<link href="~/Content/cssDoGiovani.css" rel="stylesheet" />
@model BeautyMe.Models.ViewModelAgendaProfissional
@{
    ViewBag.Title = "VerAgendaProfissional";
}
<header class="partner-header" style="margin-top:50px;">
    <div class="partner-header--box">
        <div class="partner-header--box__iconbox">

        </div>
        <div class="partner-header--box__info">

            <p class="partner-header--box__infotitle">@Model.NomeProf</p>
            @if (User.IsInRole("Cliente"))
            {
                <p>Verifique os horarios para agendar em uma data disponivel</p>
            }
            else
            {
                <p>Fique de olho para nao esquecer seus compromissos</p>
            }
        </div>
        <div class="partner-header--box__logobox">
            <img class="partner-header--box__logo" src="data:image/jpeg;base64," alt="">
        </div>
    </div>
</header>


@if (User.IsInRole("Cliente"))
{
    using (Html.BeginForm())
    {
        @Html.HiddenFor(a => a.IdProf);
        <button class="btn btn-success beauty-button" type="submit">Agendar com este profissional</button>
    }
}
<div class="home-content">
    <div class="product-list">
        @foreach (var item in Model.agenda.OrderBy(a=>a.Data))
        {
            <div class="product">
                <div class="product--imagebox">
                    <div class="agenda-date">
                        <div class="dayofmonth" style="font-size:3em;margin-right:25px">@item.Data.Day</div>
                        <div class="shortdate text-muted">@item.Data.Month/@item.Data.Year</div>
                    </div>
                </div>
                <div class="product--info">
                    <p class="product--info__title" style="font-size:1.5em;margin-bottom: 0px;">Horario ocupado</p>
                    <p class="product--info__item">As: @item.Data.Hour:@item.Data.Minute</p>
                    <p class="product--info__item">Tempo estimado @item.Servico.Tempo</p>
                </div>
            </div>
        }
    </div>
</div>
@if (User.IsInRole("Cliente"))
{
    using (Html.BeginForm())
    {
        @Html.HiddenFor(a => a.IdProf);
        <button class="btn btn-success beauty-button" type="submit">Agendar com este profissional</button>
    }
}


<style>
    .body-content {
        padding-left: 0px;
        padding-right: 0px;
    }

    .beauty-button {
        background-color: #f95757;
        border: none;
        border-radius: 0;
        color: #ffffff;
        padding: 10px;
        transition: .3s;
        width: 100%;
        height: 70px;
        position: fixed;
        bottom: 0;
    }

        .beauty-button:hover {
            background-color: #ec4747;
        }
</style>

