<link href="~/Content/cssDoGiovani.css" rel="stylesheet" />
@model BeautyMe.Models.ViewModelCreateAgenda

@{
    ViewBag.Title = "Create";
}

<header class="products-header" style="margin-top:50px">
    <p class="products-header--title">Agendar</p>
</header>
<br />
<main style="margin-top:5px">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })   
        @*<input type="datetime-local" name="Data" id="Data" class="login-form--input" placeholder = "DATA">*@
        @Html.EditorFor(model => model.agenda.Data, new { htmlAttributes = new { @class = "login-form--input", placeholder = "DATA (xx/xx/xxxx xx:xx)" } })
        @Html.ValidationMessageFor(model => model.agenda.Data, "", new { @class = "text-danger" })

        @Html.EditorFor(model => model.agenda.Descricao, new { htmlAttributes = new { @class = "login-form--input", placeholder = "Descrição" } })
        @Html.ValidationMessageFor(model => model.agenda.Descricao, "", new { @class = "text-danger" })

        @Html.DropDownListFor(x => x.IdServ, new SelectList(Model.servicosDoProfissional, "Id", "Name"), new { @class = "login-form--input", placeholder = "Serviço" })

        <button class="login-form--button" type="submit" onclick="IdServ.value = $(" servicosDoProfissional option:selected").val">Agendar</button>
    }
</main>
<style>
    .body-content {
        padding-left: 0px;
        padding-right: 0px;
    }
</style>
